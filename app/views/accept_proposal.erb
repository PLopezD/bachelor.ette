<div class="col-md-offset-4 col-md-4 col-md-offset-4">

<h1>Proposer's Profile</h1>
<div class="flip-container" ontouchstart="this.classList.toggle('hover');">
  <div class="flipper">
    <div class="front">
      <img src="<%= @proposer.picture %>">
    </div>
    <div class="back">
      <h4><%= @proposer.first_name %> <%= @proposer.last_name %></h4>
      <p><%= @proposer.quirk %></p>
      <p><%= @proposer.bio %></p>
      <p><%= @proposer.preference %></p>
    </div>
  </div>
</div>


<form action="/accept" method="post">
  <input type="hidden" name="proposal_id" value="<%=@proposal_id%>" >
  <button class = 'btn btn-danger' type="submit" value="Accept!">Accept!</button>
</form>

<form action="/" method="get">
  <button class = 'btn btn-danger' type="submit" value="Back to home...">Back to home...</button>
</form>

</div>
