<% if logged_in? %>
<ul class="nav nav-justified">
  <li>
    <span id='welcome'>Welcome, <%= current_user.first_name %></span>
  </li>

  <li>
    <form action="/" method="get">
      <button class="btn btn-danger" input type="submit" value="Home">    Home    <span class="glyphicon glyphicon-home"></span></button>
    </form>
  </li>
  <li>
    <% if !on_active_list? %>

    <form  action="/futurebachelorette" method="post">
      <button class="btn  btn-danger" type="submit" value="Get On The Bus!">   Get On The Bus!    <i class="fa fa-bus"></i></button>

    </form>
    <% end %>
  </li>
  <li>
    <form action="/<%=session[:user_id] %>/dates" method="get">
      <button class="btn btn-danger"
      input type="submit" value="My Dates">
      <% if date_notification? %>
      New Date!
      <% else%>
      My Dates
      <% end %>
      <i class="fa fa-heart"></i></button>
    </form>
  </li>
  <li>
    <form action="/<%=session[:user_id] %>" method="get">
      <button class="btn btn-danger" type="submit" value="View Profile">    View Profile    <i class="fa fa-heart"></i></button>
    </form>
  </li>
  <li>
    <form action="/logout/" method="post">
      <button class="btn  btn-danger" type="submit" value="Logout">   Logout   <i class="fa fa-chain-broken"></i></button>
    </form>
  </li>

</ul>
<% end %>
